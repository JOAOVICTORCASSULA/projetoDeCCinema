{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "Compilar C",
          "type": "shell",
          "command": "gcc",
          "args": [
              "-Wall",
              "-Wextra",
              "-g",
              "${workspaceFolder}/main.c",
              "${workspaceFolder}/filme.c",
              "${workspaceFolder}/carrinho.c",
              "-o",
              "${workspaceFolder}/output/main.exe"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "problemMatcher": ["$gcc"],
          "detail": "Compilação de C com GCC"
      }
  ]
}

  